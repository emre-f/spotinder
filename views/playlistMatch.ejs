<body class="d-flex text-center text-white">
    <canvas id="backgroundCanvas"></canvas>
    <div class="cover-container d-flex w-100 h-100 p-3 mx-auto flex-column">
        <header class="mb-auto">
            <div>
                <h3 class="float-md-left mb-0">Spotinder: Playlist Match</h3>
                <nav class="nav nav-masthead justify-content-center float-md-right">
                    <a class="nav-link active" aria-current="page" href="/"> Home </a>
                    <% if(!accessTokenPresent) { %>
                    <a class="nav-link" href="/auth">Authenticate with Spotify</a>
                    <% } else { %>
                    <!-- <a class="nav-link" href="/logout">Logout</a> -->
                    <% } %>
                </nav>
            </div>
        </header>

        <main class="px-3">
            <!-- <div>
                <form>
                    <div class="form-group container">
                      <label for="exampleInputEmail1" class="lead">Playlist ID</label>
